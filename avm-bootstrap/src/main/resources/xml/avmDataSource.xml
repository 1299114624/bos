<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        <bean id="avmDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
            <property name="driverClassName" value="${avmdb.datasource.driver-class-name}" />
            <property name="url" value="${avmdb.datasource.jdbc-url}"/>
            <property name="username" value="${avmdb.datasource.username}"/>
            <property name="password" value="${avmdb.datasource.password}"/>
        </bean>
</beans>